<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.granaccess">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.GranAccess">

        <activity
            android:name=".SeleccionarMaterialActivity"
            android:parentActivityName=".ComandaActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ComandaActivity" />
        </activity>

        <activity
            android:name=".ComandaActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.GranAccess" />

        <activity
            android:name=".GestionTareasActivity"
            android:label="Gestionar Tareas"
            android:theme="@style/Theme.GranAccess" />

        <activity
            android:name=".CrearTareaActivity"
            android:label="Crear Tarea"
            android:theme="@style/Theme.GranAccess" />

        <activity
            android:name=".VerTareasActivity"
            android:label="Ver Tareas"
            android:theme="@style/Theme.GranAccess" />

        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

    </application>
</manifest>
