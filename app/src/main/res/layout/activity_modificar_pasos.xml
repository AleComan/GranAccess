<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/softBlueBackground"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="36dp">

    <TextView
        android:id="@+id/textPaso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:textColor="@color/deepBlueText"
        android:text="Paso 1"
        android:fontFamily="@font/albert_sans"
        android:textSize="30sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editPasoContenido"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:fontFamily="@font/albert_sans"
        android:background="@drawable/rounded_edittext"
        android:textSize="16sp"
        android:hint="Descripción del paso"
        android:padding="15dp"
        android:singleLine="false" />

    <!-- Navegación entre pasos -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnPasoAnterior"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:background="@drawable/rounded_button"
            android:fontFamily="@font/albert_sans"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/softBlueBackground"
            android:text="Anterior"
            android:visibility="gone" />

        <Button
            android:id="@+id/btnPasoSiguiente"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:background="@drawable/rounded_button"
            android:fontFamily="@font/albert_sans"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/softBlueBackground"
            android:layout_marginStart="16dp"
            android:text="Siguiente" />
    </LinearLayout>

    <!-- Imagen del paso -->
    <TextView
        android:id="@+id/tvFotoPerfil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="Foto del paso"
        android:textSize="16sp"
        android:layout_marginTop="30dp" />

    <ImageView
        android:id="@+id/ivImagenPaso"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:background="@drawable/border_background_blue"
        android:scaleType="centerCrop"
        android:src="@drawable/placeholder"
        android:layout_marginTop="0dp" />

    <!-- Botones para guardar o volver -->
    <Button
        android:id="@+id/btnGuardarTarea"
        android:layout_width="320dp"
        android:layout_height="70dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/rounded_button"
        android:fontFamily="@font/albert_sans"
        android:textColor="@color/softBlueBackground"
        android:textSize="20sp"
        android:textStyle="bold"
        android:text="Guardar Cambios" />

    <Button
        android:id="@+id/btnVolver"
        android:layout_width="320dp"
        android:layout_height="70dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/rounded_button_back"
        android:fontFamily="@font/albert_sans"
        android:text="Volver"
        android:textColor="@color/softBlueBackground"
        android:textSize="20sp"
        android:textStyle="bold" />
</LinearLayout>
