<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/textNumeroPaso"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Número del Paso"
        android:textSize="18sp"
        android:paddingBottom="8dp" />

    <TextView
        android:id="@+id/textDescripcionPaso"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Descripción del Paso"
        android:textSize="16sp"
        android:paddingBottom="16dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnPasoAnterior"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Paso Anterior" />

        <Button
            android:id="@+id/btnPasoSiguiente"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Paso Siguiente" />
    </LinearLayout>
</LinearLayout>
