<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/softBlueBackground"
    android:gravity="center">

    <!-- Title -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reordenar Pasos"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:paddingBottom="16dp"
        android:fontFamily="@font/albert_sans"
        android:textColor="@color/deepBlueText" />

    <!-- RecyclerView for displaying steps -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewPasos"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:dividerHeight="1dp"
        android:clipToPadding="false" />

    <Button
        android:id="@+id/btnGuardarCambios"
        android:layout_width="320dp"
        android:layout_height="70dp"
        android:layout_marginTop="16dp"
        android:text="Guardar Cambios"
        android:background="@drawable/rounded_button"
        android:textColor="@color/white"
        android:fontFamily="@font/albert_sans"
        android:textSize="16sp"
        android:textStyle="bold" />

    <!-- Save Button -->
    <Button
        android:id="@+id/btnVolver"
        android:layout_width="320dp"
        android:layout_height="70dp"
        android:layout_marginTop="16dp"
        android:text="Volver"
        android:background="@drawable/rounded_button_back"
        android:textColor="@color/white"
        android:fontFamily="@font/albert_sans"
        android:textSize="16sp"
        android:textStyle="bold" />
</LinearLayout>
