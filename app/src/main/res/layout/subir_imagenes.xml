<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Título -->
    <TextView
        android:id="@+id/tvTituloSubida"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Selecciona las imágenes"
        android:textSize="18sp"
        android:gravity="center"
        android:layout_marginBottom="16dp" />

    <!-- Botón para seleccionar imágenes -->
    <Button
        android:id="@+id/btnSeleccionarImagenes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Seleccionar Imágenes"
        android:layout_marginBottom="16dp" />

    <!-- GridView para mostrar las imágenes seleccionadas -->
    <GridView
        android:id="@+id/gvImagenesSeleccionadas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:numColumns="3"
        android:horizontalSpacing="8dp"
        android:verticalSpacing="8dp"
        android:layout_marginBottom="16dp" />

    <!-- Botón para subir imágenes -->
    <Button
        android:id="@+id/btnSubirImagenes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Subir Imágenes"
        android:visibility="gone" />
</LinearLayout>
