<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="36dp"
    android:gravity="center_horizontal"
    android:background="@color/softBlueBackground">

    <!-- Título de la vista -->
    <TextView
        android:id="@+id/tituloVisualizarTareas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tareas"
        android:textColor="@color/deepBlueText"
        android:textSize="30sp"
        android:textStyle="bold"
        android:fontFamily="@font/albert_sans"
        android:layout_marginBottom="30dp" />

    <!-- RecyclerView para mostrar tareas dinámicas -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewTareas"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:clipToPadding="false"
        android:padding="0dp"
        android:scrollbars="vertical" />

    <!-- Botón para regresar -->
    <Button
        android:id="@+id/btnVolver"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@drawable/rounded_button_back"
        android:textColor="@color/softBlueBackground"
        android:fontFamily="@font/albert_sans"
        android:textSize="20sp"
        android:textStyle="bold"
        android:text="Volver"
        android:layout_marginTop="16dp" />
</LinearLayout>
