<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/softBlueBackground"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="36dp">

    <!-- Título de la tarea -->
    <TextView
        android:id="@+id/tituloTarea"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:fontFamily="@font/albert_sans"
        android:text="Título de la Tarea"
        android:textSize="30sp"
        android:textStyle="bold" />

    <!-- Descripción de la tarea -->
    <TextView
        android:id="@+id/descripcionTarea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:fontFamily="@font/albert_sans"
        android:background="@drawable/rounded_edittext"
        android:padding="15dp"
        android:textSize="16sp"
        android:hint="Descripción de la tarea"
        android:text="Descripción de la tarea" />

    <!-- Imagen de la tarea -->
    <ImageView
        android:id="@+id/imagenTarea"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/border_background_blue"
        android:scaleType="centerCrop"
        android:src="@drawable/placeholder" />

    <!-- Botón para ver pasos -->
    <Button
        android:id="@+id/btnVerPasos"
        android:layout_width="320dp"
        android:layout_height="70dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/rounded_button"
        android:fontFamily="@font/albert_sans"
        android:textColor="@color/softBlueBackground"
        android:textSize="20sp"
        android:textStyle="bold"
        android:text="Ver Pasos" />

    <!-- Botón para volver -->
    <Button
        android:id="@+id/btnVolver"
        android:layout_width="320dp"
        android:layout_height="70dp"
        android:background="@drawable/rounded_button_back"
        android:fontFamily="@font/albert_sans"
        android:text="Volver"
        android:textColor="@color/softBlueBackground"
        android:textSize="20sp"
        android:textStyle="bold" />
</LinearLayout>
